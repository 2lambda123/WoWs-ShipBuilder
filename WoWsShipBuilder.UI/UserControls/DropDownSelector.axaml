<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:userControls="clr-namespace:WoWsShipBuilder.UI.UserControls"
             xmlns:conv="clr-namespace:WoWsShipBuilder.UI.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Name="DropDownControl"
             x:Class="WoWsShipBuilder.UI.UserControls.DropDownSelector">

    <UserControl.Resources>
        <conv:ModernizationImageConverter x:Key="ModernizationImageConverter" />
    </UserControl.Resources>

    <Panel x:Name="BasePanel"
           DataContext="{Binding RelativeSource={RelativeSource AncestorType=userControls:DropDownSelector}}">
        <!-- The button that opens the actual dropdown menu in the popup. -->
        <Button x:Name="DropDownButton" Width="{Binding Width}" Height="{Binding Height}" Click="Button_OnClick">
            <Image Source="{Binding SelectedImage}" />
        </Button>

        <!-- The popup containing the list of available upgrades. -->
        <Popup Name="UpgradeListPopup" PlacementAnchor="Bottom" PlacementTarget="DropDownButton" IsOpen="False"
               IsLightDismissEnabled="True">
            <ListBox Classes="ShipModules" Width="{Binding Bounds.Width, ElementName=DropDownControl}"
                     SelectedIndex="{Binding ElementName=BasePanel, Path=DataContext.SelectedIndex}"
                     SelectionMode="Single"
                     Items="{Binding EffectiveModernizationsList}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding Converter={StaticResource ModernizationImageConverter}}" ToolTip.Placement="Right">
                            <ToolTip.Tip>
                                <userControls:ModifierToolTip DataContext="{Binding}" />
                            </ToolTip.Tip>
                        </Image>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Popup>
    </Panel>
</UserControl>