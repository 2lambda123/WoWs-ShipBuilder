<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="1000"
        x:Class="WoWsShipBuilder.UI.Views.MainWindow"
        xmlns:t="clr-namespace:WoWsShipBuilder.UI.Translations"
        xmlns:userControls="clr-namespace:WoWsShipBuilder.UI.UserControls"
        xmlns:vm="clr-namespace:WoWsShipBuilder.UI.ViewModels"
        Title="WoWs Ship Builder"
        Height="1000" Width="1200" CanResize="False"
        ExtendClientAreaToDecorationsHint="True" ExtendClientAreaTitleBarHeightHint="30"
        WindowStartupLocation="CenterScreen">
    <Design.DataContext>
        <vm:MainWindowViewModel  />
    </Design.DataContext>

    <Grid RowDefinitions="30, *">
        <userControls:AppHeader/>

        <Grid Grid.Row="1" ShowGridLines="False" RowDefinitions="*,4*,3*">
            <!--First row-->
            <Border Classes="BorderPanel" Grid.Row="0" Margin="10">
                <Grid ColumnDefinitions="*,2*,*">
                    <Grid RowDefinitions="*,*" ColumnDefinitions="Auto" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button Content="{x:Static t:Translation.MainWindow_BackToMenu}" Command="{Binding BackToMenuCommand}" Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,0,0,10" />
                        <Button Name="NewShip" Content="{x:Static t:Translation.MainWindow_NewShipSelection}" Command="{Binding NewShipSelectionCommand}" Grid.Row="1" HorizontalAlignment="Stretch"/>
                    </Grid>
                    <!-- The button inside will be Image when we have them-->
                    <RelativePanel Grid.Column="1" HorizontalAlignment="Center">
                        <Button x:Name="PreviousShip" Content="Previous ship"
                                RelativePanel.AlignVerticalCenterWithPanel="True" />
                        <Button x:Name="CurrentShip" RelativePanel.AlignBottomWith="PreviousShip"
                                RelativePanel.RightOf="PreviousShip" Content="Current Ship" Height="50" Margin="20,0" />
                        <Button Content="Next Ship" RelativePanel.RightOf="CurrentShip"
                                RelativePanel.AlignBottomWith="PreviousShip" />
                    </RelativePanel>
                    <Grid RowDefinitions="*,*" ColumnDefinitions="Auto" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button Content="{x:Static t:Translation.MainWindow_ShareBuild}" Command="{Binding OpenSaveBuild}" Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,0,0,10"/>
                        <Button Content="{x:Static t:Translation.MainWindow_ResetBuild}" Grid.Row="1" HorizontalAlignment="Stretch"/>
                    </Grid>
                </Grid>
            </Border>

            <!--SecondRow-->
            <Grid Grid.Row="1" ColumnDefinitions="2*,4*">
                <StackPanel Grid.Column="0" Spacing="10">
                    <userControls:ShipModuleControl Height="395" Width="350" DataContext="{Binding ShipModuleViewModel}" />
                    <Border BorderBrush="Gray" BorderThickness="1" Height="80" Width="350" CornerRadius="5" Padding="5">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <userControls:DropDownSelector Classes="Upgrades"
                                                           AvailableModernizations="{Binding Slot1ModernizationList}" />
                            
                            <userControls:DropDownSelector Classes="Upgrades"
                                                           AvailableModernizations="{Binding Slot2ModernizationList}" />
                            
                            <userControls:DropDownSelector Classes="Upgrades"
                                                           AvailableModernizations="{Binding Slot3ModernizationList}" />

                            <userControls:DropDownSelector Classes="Upgrades"
                                                           AvailableModernizations="{Binding Slot4ModernizationList}" />
                        </StackPanel>
                    </Border>
                </StackPanel>
                <Border Classes="BorderPanel" Grid.Column="1" Padding="5" Margin="0,0,10,0" CornerRadius="5">
                    <userControls:ShipStatsControl DataContext="{Binding ShipStatsControlViewModel}"/>
                </Border>
            </Grid>
            <!--Third Row-->
            <Grid ColumnDefinitions="3*,2*,*" Grid.Row="2">
                <Expander Header="Captain Skills" Grid.Column="0" Grid.Row="0" ExpandDirection="Down" IsExpanded="True"
                          BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="10">
                    <userControls:CaptainSkillSelector DataContext="{Binding CaptainSkillSelectorViewModel}"/>
                </Expander>
                <Expander Header="Signals" Grid.Column="1" Grid.Row="0" ExpandDirection="Down" IsExpanded="True"
                          BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="10" >
                    <userControls:SignalSelector DataContext="{Binding SignalSelectorViewModel}"/>
                </Expander>
                <Expander Header="Other stuff" Grid.Column="2" Grid.Row="0" ExpandDirection="Down" IsExpanded="True"
                          BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="10" />
            </Grid>
        </Grid>
    </Grid>
</Window>