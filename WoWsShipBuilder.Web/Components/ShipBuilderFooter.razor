@inject IJSRuntime jsRuntime
<Container>
    <Row>
        <Column ColumnSize="ColumnSize.Is4" Position="Position.Absolute.Top.Is50.Start.Is50.Translate.Middle">
            <Paragraph TextAlignment="TextAlignment.Center" TextColor="TextColor.Primary">
                Developed by the WoWsShipbuilder team.
                All copyright materials provided by Wargaming.net are owned by Wargaming.net.
            </Paragraph>
            <Figure Source="" Size="FigureSize.Is128x128" Position="Position.Absolute.Start.Is50.Translate.MiddleX" @onclick="OnDiscordClicked" style="cursor: pointer">
                <FigureImage Source="assets/discord.png"/>
            </Figure>
        </Column>
    </Row>
</Container>


@code {

    async Task OnDiscordClicked()
    {
        await jsRuntime.InvokeAsync<object>("open", "https://discord.gg/C8EaepZJDY", "_blank");
    }

}