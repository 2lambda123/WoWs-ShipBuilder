            <CellTemplate>
                @if (context.Item.TorpedoDetectRange.Any())
                {
                    List<decimal> torps = context.Item.TorpedoDetectRange;
                    for (var i = 0; i < torps.Count; i++)
                    {
                        decimal torp = torps[i];
