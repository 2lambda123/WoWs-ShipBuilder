    private async Task ContentIsLoading(bool isLoading)
    {
        if (isLoading)
        {
            snackbar.Add("Loading Data...", Severity.Info);
        }
        else
        {
            snackbar.Add("Data Loading Completed", Severity.Success);
            isInitialized = true;
            StateHasChanged();
            await Task.Delay(5000);
            snackbar.Clear();
            snackbar.Dispose();
        }

    }
