@inherits LayoutComponentBase

<MudThemeProvider Theme="theme" IsDarkMode="true"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <TopMenu/>
    <MudMainContent>
        @Body
    </MudMainContent>
    <footer style="margin-top: 16px;">
        <ShipBuilderFooter/>
    </footer>
</MudLayout>

@code
{
    private readonly MudTheme theme = new()
    {
        PaletteDark =
        {
            Primary = "#505050",
            Secondary = "#DEDEDE",
            AppbarBackground = "#121212",
            Background = "#282828",
            PrimaryContrastText = "#DEDEDE", //this seems to be the value used for buttons and stuff with primary color as setting
            ActionDefault = "#808080",
            Surface = "#282828", //background of mudPaper
            ActionDisabled = "#545454", //foreground and lines/border of disabled inputs/buttons
            ActionDisabledBackground = "#333333", //background of disabled inputs/buttons
            HoverOpacity = 0.2, //opacity applied for some visual effect of ripple and selection and similar
            LinesInputs = "#999999", //color of lines/border of enabled stuff
            LinesDefault = "#999999", //color of lines/borders of non inputs enabled stuff
             
        },
        LayoutProperties =
        {
            DefaultBorderRadius = "0",
        }
    };
}