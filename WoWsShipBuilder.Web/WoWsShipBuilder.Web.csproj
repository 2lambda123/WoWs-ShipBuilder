      <_ContentIncludedByDefault Remove="wwwroot\lib\bootstrap\dist\js\bootstrap.bundle.min.js" />
      <_ContentIncludedByDefault Remove="wwwroot\lib\bootstrap\dist\js\bootstrap.bundle.min.js.map" />
      <_ContentIncludedByDefault Remove="wwwroot\lib\fortawesome\fontawesome-free\css\all.css" />
      <_ContentIncludedByDefault Remove="wwwroot\lib\fortawesome\fontawesome-free\webfonts\fa-brands-400.eot" />
